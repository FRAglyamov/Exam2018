@model Module1.Models.Client
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="EditClient" asp-controller="Client">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label">Фамилия</label>
        <input type="text" asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Birthdate" class="control-label">Год рождения</label>
        <input type="date" asp-for="Birthdate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SerialNumber" class="control-label">Номер паспорта</label>
        <input type="number" asp-for="SerialNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Registration" class="control-label">Прописка</label>
        <input type="text" asp-for="Registration" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>